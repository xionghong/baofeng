<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/bg_title_bar"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/slide_firstmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center" 
        android:background="@drawable/slide_menu_click"
        android:clickable="true"/>

  

    <Button
        android:id="@+id/imageButton1"
        android:layout_width="80px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/local_button_click"
        android:clickable="true"
        android:text="本地"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/slide_menu_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slide_firstmenu"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/imageButton1"
        android:gravity="center_vertical"
        android:background="@drawable/slide_menu_history_click"
        android:clickable="true" />

    <ImageView
        android:id="@+id/slide_menu_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slide_menu_history"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/slide_menu_history"
        android:gravity="center_vertical"
        android:background="@drawable/slide_menu_search_click"
        android:clickable="true" />

</RelativeLayout>